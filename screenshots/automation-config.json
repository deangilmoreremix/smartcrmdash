    { "name": "tasks", "url": "/tasks" },
    { "name": "calendar", "url": "/calendar" },
    { "name": "appointments", "url": "/appointments-dashboard" },
    { "name": "phone-system", "url": "/phone-system" },
    { "name": "invoicing", "url": "/invoicing" },
    { "name": "content-library", "url": "/content-library" }
  ]
}