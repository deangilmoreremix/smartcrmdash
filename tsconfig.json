{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "ts-node": {
    "esm": false
  },
  "include": [
    "*.ts",
    "screenshot.runner.ts",
    "test-screenshot.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "server"
  ]
}
